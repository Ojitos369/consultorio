<!DOCTYPE html>
<html>

<head>
    <meta charset='utf-8'>
    <link rel="stylesheet" href="/css/normalize.css">
    <link rel="stylesheet" href="/css/encuesta.css">
    <link rel="stylesheet" href="/css/encuesta_fin.css">
    <link rel="stylesheet" href="/css/fondo-encuesta.css">
    <link href="https://fonts.googleapis.com/css2?family=Mate+SC&display=swap" rel="stylesheet">
    <link rel="icon" href="/imagenes/logo-simple.png">
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>

<body>
    <%- include('fondo') %>
    <div class="main-container" id="main-container">
        <form action="<%= accion %>" method="POST" class="formulario container">
            <% for(i=0; i<preguntas.length; i++){ %>
                <% if(preguntas[i].tipo == 'checkbox' || preguntas[i].tipo == 'radio'){ %>
                    <div class="pregunta <%= preguntas[i].clase %>">
                    <%= preguntas[i].pregunta %>
                    <br>
                    <div class="eleccion">
                    <% for(j=0; j<respuestas.length; j++){ %>
                        <% if(respuestas[j].id_pregunta == preguntas[i].id){ %>
                                <label class="label-seleccion" for="respuesta<%= respuestas[j].id %>"><input class="input input-eleccion" id="respuesta<%= respuestas[j].id %>" type="<%= preguntas[i].tipo %>" value="<%= respuestas[j].respuesta %>" name="<%= preguntas[i].id %>"><img class="img-res" src="/imagenes/<%= respuestas[j].respuesta %>.png" alt="<%= respuestas[j].respuesta %>"></label>
                        <% } %>
                    <% } %>
                    </div>
                    </div>
                <% }else{ %>
                    <input id="pregunta-<%= preguntas[i].id %>" class="pregunta input input-texto" name="<%= preguntas[i].id %>" placeholder="<%= preguntas[i].pregunta %>" type="<%= preguntas[i].tipo %>"></input><br>
                <% } %>
                <br>
            <% } %>
            <input name="id_encuesta" type="hidden" value="<%= seccion %>">
            <input class="pregunta input enviar" type="submit" title="enviar">
        </form>
        <div class="container container-qr" id="footer">
            <img src="/imagenes/qr.png" alt="" class="instagram qr">
            <p>Te invito a seguirme en Instagram</p>
        </div>
    </div>
    
</body>
</html>